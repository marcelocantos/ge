plugins {
    id 'com.android.application'
}

android {
    namespace "__PACKAGE__"
    compileSdk 35

    defaultConfig {
        applicationId "__PACKAGE__"
        minSdk 26
        targetSdk 35
        versionCode 1
        versionName "1.0"

        ndk {
            abiFilters 'arm64-v8a'
        }

        externalNativeBuild {
            cmake {
                arguments "-DANDROID_STL=c++_shared"
            }
        }
    }

    buildTypes {
        release {
            minifyEnabled false
        }
    }

    externalNativeBuild {
        cmake {
            path 'src/main/cpp/CMakeLists.txt'
        }
    }

    // Include SDL3 Java sources from vendor
    sourceSets {
        main {
            java.srcDirs = [
                'src/main/java',
                "${rootDir}/../sq/vendor/github.com/libsdl-org/SDL/android-project/app/src/main/java"
            ]
        }
    }

    lint {
        abortOnError = false
    }
}

// Sync game data into APK assets before building
tasks.register('syncAssets', Sync) {
    from("${rootDir}/../data") { into('data') }
    from("${rootDir}/../shaders") { into('shaders') }
    into('src/main/assets')
}
preBuild.dependsOn('syncAssets')

dependencies {
}
